PKGFOLDER=~/.hmDict
tPage="http://www.ted.com/talks/browse?language=zh-tw&topics=science&sort=newest"
exeName=$0
exeName=${exeName##*/}
exeName=${exeName%.*}
exeName=$exeName.py
python $PKGFOLDER/$exeName -v $tPage
